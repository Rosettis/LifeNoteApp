<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_detailed_note"
    tools:context="capstone.uoit.ca.lifenoteapp.functions.Notes.CreateNoteActivity">

    <RelativeLayout
        android:id="@+id/layout_quickNote"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignTop="@+id/layout_detailedNote"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/layout_detailedNote"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_submitCreatedNote_createQuickNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_submitCreatedNote_createNoteAcivity"
            android:onClick="submitQuickNewNote"
            android:layout_alignTop="@+id/btn_cancelCreatedNote_createQuickNoteAcivity"
            android:layout_alignEnd="@+id/editText_enterNoteName_createQuickNoteAcivity" />

        <Button
            android:id="@+id/btn_cancelCreatedNote_createQuickNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelCreatedNote_createNoteAcivity"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/editText_enterNoteContent_createQuickNoteAcivity"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="47dp" />

        <EditText
            android:id="@+id/editText_enterNoteContent_createQuickNoteAcivity"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/editTextHint_newNoteTextHint_createNoteAcivity"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/btn_submitCreatedNote_createQuickNoteAcivity" />

        <EditText
            android:id="@+id/editText_enterNoteName_createQuickNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHint_newNoteNameHint_createNoteAcivity"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/spinner_enterNoteType_createQuickNoteAcivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editText_enterNoteName_createQuickNoteAcivity"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/btn_cancelCreatedNote_createQuickNoteAcivity" />

        <EditText
            android:id="@+id/editText_illness"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/editTextHint_newNoteIllnessHint_createNoteAcivity"
            android:layout_below="@+id/spinner_enterNoteType_createQuickNoteAcivity"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_symptomSeverity"
            android:layout_marginTop="59dp"
            android:layout_below="@+id/editText_illness"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/spinner_enterNoteType_createQuickNoteAcivity" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lbl_severity_createNoteAcivity"
            android:id="@+id/textView_noteDescription"
            android:layout_marginBottom="28dp"
            android:layout_alignBottom="@+id/seekBar_symptomSeverity"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_detailedNote"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentEnd="true"
        android:visibility="gone">
        <!--android:layout_alignStart="@+id/layout_detailedNote2"-->
        <!--android:layout_alignTop="@+id/layout_detailedNote2"-->

        <Button
            android:id="@+id/btn_submitCreatedNote_createdetailedNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_submitCreatedNote_createNoteAcivity"
            android:onClick="submitdetailedNewNote"
            android:layout_alignTop="@+id/btn_cancelCreatedNote_createdetailedNoteAcivity"
            android:layout_alignEnd="@+id/editText_enterNoteName_createdetailedNoteAcivity" />

        <Button
            android:id="@+id/btn_cancelCreatedNote_createdetailedNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelCreatedNote_createNoteAcivity"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/editText_enterNoteContent_createdetailedNoteAcivity"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="47dp" />

        <EditText
            android:id="@+id/editText_enterNoteContent_createdetailedNoteAcivity"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/editTextHint_newNoteTextHint_createNoteAcivity"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/btn_submitCreatedNote_createdetailedNoteAcivity" />

        <EditText
            android:id="@+id/editText_enterNoteName_createdetailedNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHint_newNoteNameHint_createNoteAcivity"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/spinner_enterNoteType_createDetailedNoteAcivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editText_enterNoteName_createdetailedNoteAcivity"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/btn_cancelCreatedNote_createdetailedNoteAcivity" />

        <EditText
            android:id="@+id/editText_illness2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/editTextHint_newNoteIllnessHint_createNoteAcivity"
            android:layout_below="@+id/spinner_enterNoteType_createDetailedNoteAcivity"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/editTextHint_newNotesymptomHint_createNoteAcivity"
            android:layout_below="@+id/editText_illness2"
            android:layout_alignParentStart="true" />

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:queryHint="Search Symptom"
            android:layout_above="@+id/editText_enterNoteContent_createdetailedNoteAcivity"
            android:layout_alignStart="@+id/btn_submitCreatedNote_createdetailedNoteAcivity"
            android:layout_alignEnd="@+id/btn_cancelCreatedNote_createdetailedNoteAcivity" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_doctorsNote"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <!--android:visibility="gone">-->

            <Button
                android:id="@+id/btn_submitCreatedNote_createDocNoteAcivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_submitCreatedNote_createNoteAcivity"
                android:layout_alignTop="@+id/btn_cancelCreatedNote_createDocNoteAcivity"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_cancelCreatedNote_createDocNoteAcivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancelCreatedNote_createNoteAcivity"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/editText_enterDoctor_createDocNoteAcivity"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="@string/editTextHint_newNoteTextHint_createNoteAcivity"
                android:layout_marginTop="53dp"
                android:layout_below="@+id/EditText_time"
                android:layout_alignEnd="@+id/EditText_time" />

            <Spinner
                android:id="@+id/spinner_enterNoteType_createDocNoteAcivity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/autocomplete_doctor" />


            <AutoCompleteTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/autocomplete_doctor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHint_enterDoctor"
                android:layout_alignEnd="@+id/EditText_date" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:clickable="true"
                android:onClick="showTimePickerDialog"
                android:hint="@string/editTextHint_enterTime"
                android:id="@+id/EditText_time"
                android:layout_below="@+id/spinner_enterNoteType_createDocNoteAcivity"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:inputType="date"
                android:hint="@string/editTextHint_enterDate"
                android:onClick="showDatePickerDialog"
                android:ems="10"
                android:id="@+id/EditText_date"
                android:layout_alignTop="@+id/EditText_time"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
</RelativeLayout>
