<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_detailed_note"
    tools:context="capstone.uoit.ca.lifenoteapp.functions.Notes.CreateDetailedNoteActivity">

    <RelativeLayout
        android:id="@+id/layout_stardardNote"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btn_submitCreatedNote_createDetailedNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_submitCreatedNote_createDetailedNoteAcivity"
            android:layout_alignTop="@+id/btn_cancelCreatedNote_createDetailedNoteAcivity"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp" />

        <Button
            android:id="@+id/btn_cancelCreatedNote_createDetailedNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelCreatedNote_createDetailedNoteAcivity"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/editText_enterNoteContent_createDetailedNoteAcivity"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="47dp" />

        <EditText
            android:id="@+id/editText_enterNoteContent_createDetailedNoteAcivity"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="@string/editTextHint_newNoteTextHint_createDetailedNoteAcivity"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/btn_submitCreatedNote_createDetailedNoteAcivity" />

        <EditText
            android:id="@+id/editText_enterNoteName_createDetailedNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHint_newNoteNameHint_createDetailedNoteAcivity" />

        <Spinner
            android:id="@+id/spinner_enterNoteType_createDetailedNoteAcivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editText_enterNoteName_createDetailedNoteAcivity" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_quickNote"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_submitCreatedNote_createQuickNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_submitCreatedNote_createDetailedNoteAcivity"
            android:layout_alignTop="@+id/btn_cancelCreatedNote_createQuickNoteAcivity"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_cancelCreatedNote_createQuickNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelCreatedNote_createDetailedNoteAcivity"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/editText_enterNoteContent_createQuickNoteAcivity"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="@string/editTextHint_newNoteTextHint_createDetailedNoteAcivity"
            android:layout_below="@+id/spinner_enterNoteType_createQuickNoteAcivity"
            android:layout_alignEnd="@+id/spinner_enterNoteType_createQuickNoteAcivity"
            android:layout_above="@+id/btn_submitCreatedNote_createQuickNoteAcivity" />

        <EditText
            android:id="@+id/editText_enterNoteName_createQuickNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHint_newNoteNameHint_createDetailedNoteAcivity" />

        <Spinner
            android:id="@+id/spinner_enterNoteType_createQuickNoteAcivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editText_enterNoteName_createQuickNoteAcivity" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_doctorsNote"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_submitCreatedNote_createDocNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_submitCreatedNote_createDetailedNoteAcivity"
            android:layout_alignTop="@+id/btn_cancelCreatedNote_createDocNoteAcivity"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_cancelCreatedNote_createDocNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelCreatedNote_createDetailedNoteAcivity"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/editText_enterNoteContent_createDocNoteAcivity"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="@string/editTextHint_newNoteTextHint_createDetailedNoteAcivity"
            android:layout_below="@+id/spinner_enterNoteType_createDocNoteAcivity"
            android:layout_alignEnd="@+id/spinner_enterNoteType_createDocNoteAcivity"
            android:layout_above="@+id/btn_submitCreatedNote_createDocNoteAcivity" />

        <EditText
            android:id="@+id/editText_enterNoteName_createDocNoteAcivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHint_newNoteNameHint_createDetailedNoteAcivity" />

        <Spinner
            android:id="@+id/spinner_enterNoteType_createDocNoteAcivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editText_enterNoteName_createDocNoteAcivity" />
    </RelativeLayout>

</RelativeLayout>
