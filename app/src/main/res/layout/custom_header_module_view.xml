<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">


        <ImageView
            android:src="@drawable/note_header_icon"
            android:layout_margin="16dp"
            android:layout_row="0"
            android:layout_column="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/editText_enterNoteTitle_view"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="@string/editTextHint_enterNoteName"
                android:layout_gravity="fill_horizontal"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:layout_gravity="fill_horizontal"
                >

                <TextView
                    android:id="@+id/editText_enterNoteDate_view"
                    style="@android:style/Widget.EditText"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:text="@string/editTextHint_enterDate"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:ems="10"/>


                <TextView
                    android:id="@+id/editText_enterNoteTime_view"
                    style="@android:style/Widget.EditText"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="@string/editTextHint_enterTime"
                    android:textSize="16sp"
                    android:ems="10"/>

            </LinearLayout>
        </LinearLayout>
    </GridLayout>
</merge>