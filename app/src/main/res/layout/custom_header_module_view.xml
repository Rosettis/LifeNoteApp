<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">


        <ImageView
            android:src="@drawable/note_header_icon"
            android:layout_marginTop="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_row="0"
            android:layout_column="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="2dp">

            <!--<com.weiwangcn.betterspinner.library.BetterSpinner-->
                <!--android:id="@+id/betterSpinner_noteLayout"-->
                <!--android:layout_width="276dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:textSize="18sp"-->
                <!--android:hint="@string/spinnerPrompt_selectLayout"-->

                <!--/>-->

            <EditText
                android:id="@+id/editText_enterNoteTitle_view"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:hint="@string/editTextHint_enterNoteName"
                android:layout_gravity="fill_horizontal"
                android:textColor="@color/colorPrimary"
                android:paddingTop="10dp"
                android:layout_marginTop="0dp"
                android:singleLine="true"
                android:lines="1"
                android:scrollHorizontally="false"
                android:maxLength="30"
                android:ellipsize="end"
                android:layout_marginStart="-1dp"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:layout_gravity="fill_horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lable_noteCreated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="@string/NoteCreatedLabel"
                        />

                    <TextView
                        android:id="@+id/editText_enterNoteDate_view"
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:text="@string/editTextHint_enterDate"
                        android:layout_marginEnd="16dp"
                        android:textSize="14sp"
                        android:ems="10"
                        android:clickable="true"
                        android:onClick="showDatePickerDialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lable_notetype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:labelFor="@id/editText_enterNoteDate_view"
                        android:textSize="14sp"
                        android:text="@string/NoteTypeLabel"
                        />

                    <TextView
                        android:id="@+id/TextView_noteType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/NoteTypeHere"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </GridLayout>
</merge>


