<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_keyword_info_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextView_keywordInfo_resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/TextView_keywordInfo_resultTerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/TextView_keywordInfo_resultDefinition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:scrollbars="vertical"/>

    <LinearLayout
        android:id="@+id/api_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center_horizontal">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/TextView_slowInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slowInternet"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:textSize="16sp"/>
</LinearLayout>