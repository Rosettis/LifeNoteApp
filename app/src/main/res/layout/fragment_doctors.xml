<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="capstone.uoit.ca.lifenoteapp.functions.Doctors.DoctorsFragment"
    android:background="#fff">
    <!--make linear layout after demo-->

    <TextView
        android:text="@string/doctors_title"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <!--make visible after demo-->

    <ListView
        android:id="@+id/doctorListView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="5sp"
        android:paddingBottom="15sp"
        android:visibility="gone"/>
    <!--make visible after demo-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/logo2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <!--Remove image after demo-->


    <!--<TextView
        android:text="Footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>-->

</RelativeLayout>