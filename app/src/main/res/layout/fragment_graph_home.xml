<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_btn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_termGraph"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="@string/alphabetical"
            />

        <Button
            android:id="@+id/btn_termGraphSorted"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="@string/prevalence"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_data_available2"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="capstone.uoit.ca.lifenoteapp.functions.Graphs.GraphHome">

        <TextView
            android:id="@+id/graph_top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yLabel"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />

        <LinearLayout
            android:id="@+id/layout_graphHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <capstone.uoit.ca.lifenoteapp.functions.Graphs.VerticalTextView
                android:id="@+id/graph_side_label"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/XLabel"
                android:gravity="center"
                android:layout_marginEnd="-10dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary">

            </capstone.uoit.ca.lifenoteapp.functions.Graphs.VerticalTextView>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>


