<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_codifyfragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#b9b9b9"
    android:layout_marginBottom="3dp"
    tools:context=".functions.Notes.CreateNotes.NoteFragmentCodify">

    <TextView
        android:id="@+id/lbl_codifyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_codifyEditText"
        android:layout_marginStart="3dp"
        />

    <EditText
        android:id="@+id/editText_codifyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_codifyDetails"
        android:lines="5"
        android:minLines="1"
        android:gravity="top|start"
        android:maxLines="10"
        android:inputType="textMultiLine|textCapSentences"/>
</LinearLayout>
