<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="vertical"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="12dp">


    <ImageView
        android:src="@drawable/note_illness_icon"
        android:layout_margin="16dp"
        android:layout_row="0"
        android:layout_column="0"
        android:foreground="@color/white"/>

    <LinearLayout
        android:id="@+id/linearLayout_doctorsFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="10dp">

        <AutoCompleteTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/autocomplete_illness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHint_enterIllness"
        />


        <EditText
            android:id="@+id/editText_symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_enterSymptoms"
            android:gravity="top|start"
            android:inputType="textCapSentences"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_enterSeverity"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_symptomSeverity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginStart="58dp"

        />
</GridLayout>





