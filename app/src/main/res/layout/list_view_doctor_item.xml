<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CardView_doctor_item">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctor_photo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/doctor_photo"
                android:layout_alignParentTop="true"
                android:text="@string/testName"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/doctorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/doctor_photo"
                android:layout_below="@id/doctorName"
                android:text="@string/testTitle"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/doctorPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/doctorTitle"
                android:layout_below="@+id/doctorName"
                android:text="@string/testPhone"
                android:textSize="20sp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/doctor_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="invisible"/>
            <!--<TextView
                android:id="@+id/doctorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/doctor_photo"
                android:layout_below="@+id/doctorPhone"
                android:text="@string/testAddress" />-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
