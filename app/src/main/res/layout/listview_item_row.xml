<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/noteDateMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/testModDate"
        android:layout_gravity="end"
        android:paddingEnd="10dp"
        android:layout_marginLeft="0dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:gravity="top|left"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/lbl_noteDescription"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Unable to load note"
        android:id="@+id/lbl_noteName"
        android:layout_marginLeft="0dp"
        android:textSize="25sp"
        android:gravity="top|left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:adjustViewBounds="true"
        android:background="#000000"
        android:layout_marginRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sample note description"
        android:id="@+id/lbl_noteDescription"
        android:gravity="top|left"
        android:layout_below="@+id/lbl_noteName"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/noteDateMod"
        android:layout_toStartOf="@+id/imageView" />

</RelativeLayout>